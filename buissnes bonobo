<script>
/* ANNÃ‰ES 2013 â†’ 3013 */
const years=[];
for(let y=2013;y<=3013;y++){years.push(y);}

/* DONNÃ‰ES QUI MONTENT ET DESCENDENT */
function genWave(base,amp){
  let v=base;
  return years.map(()=>{
    v += (Math.random()*amp - amp/2);
    if(v<50) v=50;
    return Math.round(v);
  });
}

let dataBlue=genWave(800,120);
let dataRed=genWave(1200,180);
let dataGreen=genWave(700,100);
let dataWhite=dataBlue.map((v,i)=>v+dataRed[i]+dataGreen[i]);

const ctx=document.getElementById('graph').getContext('2d');

const chart=new Chart(ctx,{
  type:'line',
  data:{
    labels:years,
    datasets:[
      {label:'Liquide',data:dataBlue,borderColor:'#00f',pointRadius:0},
      {label:'Bitcoin',data:dataRed,borderColor:'#f00',pointRadius:0},
      {label:'Carte',data:dataGreen,borderColor:'#0f0',pointRadius:0},
      {label:'Total',data:dataWhite,borderColor:'#fff',pointRadius:0}
    ]
  },
  options:{
    responsive:true,
    animation:false,
    scales:{
      y:{
        ticks:{
          callback:(v)=>v+' Md'
        }
      }
    }
  }
});

/* ANIMATION TEMPS RÃ‰EL */
setInterval(()=>{
  dataBlue.push(dataBlue[dataBlue.length-1] + (Math.random()*120-60));
  dataRed.push(dataRed[dataRed.length-1] + (Math.random()*180-90));
  dataGreen.push(dataGreen[dataGreen.length-1] + (Math.random()*100-50));
  dataWhite.push(
    dataBlue[dataBlue.length-1] +
    dataRed[dataRed.length-1] +
    dataGreen[dataGreen.length-1]
  );

  dataBlue.shift();
  dataRed.shift();
  dataGreen.shift();
  dataWhite.shift();

  chart.update();
},120);

/* MAILS */
function openMail(title,text){
  document.getElementById('mailTitle').innerText=title;
  document.getElementById('mailText').innerText=text;
  document.getElementById('modal').style.display='flex';
}

function closeMail(){
  document.getElementById('modal').style.display='none';
}

/* PLEIN Ã‰CRAN */
function fullscreen(){
  document.documentElement.requestFullscreen();
}
</script>

